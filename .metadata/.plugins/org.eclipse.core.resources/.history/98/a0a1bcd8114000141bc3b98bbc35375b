import java.util.ArrayDeque;
import java.util.ArrayList;
import java.util.List;
import java.util.Queue;


public class Density implements Algorithm {

	public Queue<Double> densities;
	public double max;
	
	
	
	@Override
	public int distance(int reference, int val) {
		int distance = Math.abs(val-reference);
		return distance;

	}

	/**
	 * Density.
	 *
	 * @param data the data
	 * @param p reference point to which is calculated the density
	 * @param x the point to which we are calculating the density
	 */
	public void densityX(Queue<Integer> data, int p, int x){
		double density = 0;
		double sum = 0;
	//	for(int i=0; i<data.size();i++){
		for(int i:data){
			sum+= Math.abs(distance(i,p) - distance(x,p));
		}
		if(sum!=0){
			int k = data.size()-1;
			density=k/sum;
			if (density>max){
				max = density;
			}
			densities.offer(density);
		}
		else{
			densities.offer(0.0);	
		}
	}
	

	public Density() {
		super();
		this.densities = new ArrayDeque<Double>();
		this.max = 0;
	}

	public Queue<Double> getDensities() {
		return densities;
	}

	public void setDensities(Queue<Double> densities) {
		this.densities = densities;
	}

	public double getMax() {
		return max;
	}

	public void setMax(double max) {
		this.max = max;
	}

	@Override
	public double ros() {
		double ros = 0;
		if(max!=0){
			for(double i: densities){
				ros = 1 - (densities.peek()/max);
			}
		}
		return ros;
	}

}
