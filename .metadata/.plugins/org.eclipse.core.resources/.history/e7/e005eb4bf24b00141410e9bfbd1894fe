import Algorithms.Density;


public class ThreadReader implements Runnable {

	public WriteRead wr;
	public String key;
	public Density density;
	
	public ThreadReader(WriteRead wr, String key, Density density){
		this.wr=wr;
		this.key=key;
		this.density=density;
	}
	
	public void run(){
		while(wr.isControlRead()){
			try {
				wr.compute(key, density);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			} catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
}
